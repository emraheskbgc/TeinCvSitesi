@model IEnumerable<TeinCvSitesi.Models.ExperienceModel>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Deneyimler</h2>


    <table class="table">
        <tr>
            <th>
                Kullanıcı Adı
            </th>
            <th>
                İş Yeri
            </th>
            <th>
                Çalışma Yılı
            </th>
            <th>
                Açıklama
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkplaceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
               
            </tr>
        }

    </table>
    <a href="/Admin/Index" class="btn btn-outline-dark" style="text-decoration-line:none"> Geri</a>
</div>