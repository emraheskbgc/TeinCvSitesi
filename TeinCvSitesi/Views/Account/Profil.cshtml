@model TeinCvSitesi.Models.ProfileUpdate
@{
    ViewBag.Title = "Profil";
}

<div class="container">
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Profil Güncelleme Sayfası</li>
            </ol>
        </nav>
        <div class="col-md-12">
            <div class="img-thumbnail">
                <br />
                @using (Html.BeginForm("Profil", "Account", FormMethod.Post, new { @class = "row" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Adı =</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Name, new { htmlAttribute = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Soyadı =</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.SurName, new { htmlAttribute = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.SurName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">E-mail =</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Email, new { htmlAttribute = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Telefon Numarası =</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttribute = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Kullanıcı Adı =</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.UserName, new { htmlAttribute = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-outline-success col-6"><i class="bi bi-pencil"></i>Update</button>
                            <a href="/Account/SifreDegistir">Şifre Değiştir</a>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
