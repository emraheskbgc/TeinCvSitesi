@model TeinCvSitesi.Models.Login
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Login</li>
            </ol>
        </nav>
        <div class="col-md-12">
            <div class="img-thumbnail">
                <br />
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row" }))
                {
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">User Name =</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.UserName, new { htmlAttribute = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label">Password =</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Password, new { htmlAttribute = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                   
                    <div class="row mb-3" style="text-align:center">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-outline-success col-6"><i class="bi bi-box-arrow-in-right"></i>Login</button>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

