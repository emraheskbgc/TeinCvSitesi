@model List<TeinCvSitesi.Models.PersonalInfoModel>

@{
    ViewBag.Title = "Index";
}




<div class="container">
    <h2>Kişisel Bilgi Sayfası</h2>

    <table class="table">
        <tr>
            <th>
                Kullanıcı Adı
            </th>

            <th>
                Ad-Soyad
            </th>
            <th>
                Telefon
            </th>
            <th>
                E-mail
            </th>
            <th></th>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <div class="row mb-3" style="text-align:center">

                        <div class="col-md-1">
                            <label class="btn btn-success">
                                @User.Identity.Name
                            </label>
                        </div>
                    </div>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NameSurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning" }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }




        </table>
        <div style="margin-left:10px;">

            <div>
                <label class="btn btn-primary">

                    <a href="/PersonalInfo/Create" style="color:black; text-decoration-line:none;">Ekle</a>

                </label>
            </div>

        </div>
     

    </div>
     