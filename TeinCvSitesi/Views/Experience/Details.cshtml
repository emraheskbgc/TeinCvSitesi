@model TeinCvSitesi.Models.Experience

@{
    ViewBag.Title = "Details";
}
<div class="container">
    <h2>Deneyim Detay Sayfası</h2>

    <div>
        
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Kullanıcı Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                İş Yeri
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WorkplaceName)
            </dd>

            <dt>
                Çalışma Yılı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WorkYear)
            </dd>

            <dt>
                Açıklama
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id },new { @class="btn btn-outline-warning"}) |
        <a href="/Experience/Index" class="btn btn-outline-dark" style="text-decoration-line:none">Geri</a>
    </p>
</div>