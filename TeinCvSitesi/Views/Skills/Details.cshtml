@model TeinCvSitesi.Models.Skill

@{
    ViewBag.Title = "Details";
}
<div class="container">
    <h2>Beceri Detayı</h2><br />

    <div>
        
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Kullanıcı Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                Beceri Adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SkillName)
            </dd>

            <dt>
                Derece
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Degree)
            </dd>

           

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id },new { @class="btn btn-outline-warning"}) |
        <a href="/Skills/Index" class="btn btn-outline-dark" style="text-decoration-line:none">Geri</a>
    </p>
</div>