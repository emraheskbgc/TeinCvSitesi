@model IEnumerable<TeinCvSitesi.Models.SkillModel>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Becerilerim</h2>


    <table class="table">
        <tr>
            <th>
                Kullanıcı Adı
            </th>
            <th>
                Beceri Adı
            </th>
            <th>
                Derece
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="row mb-3" style="text-align:center">

                        <div class="col-md-1">
                            <label class="btn btn-success">
                                @User.Identity.Name
                            </label>
                        </div>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>

                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id },new { @class="btn btn-outline-warning"}) |
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }

    </table>
    <p>
        <a href="/Skills/Create" class="btn btn-info" style="text-decoration-line:none;"> Yeni Beceri Ekle</a>
      
    </p>
</div>